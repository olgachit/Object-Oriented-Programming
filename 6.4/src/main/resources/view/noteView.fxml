<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<VBox alignment="TOP_CENTER" prefHeight="400" prefWidth="400" spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="controller.NoteController">
    <TextField fx:id="titleField" promptText="Enter note title">
      <font>
         <Font name="Tahoma" size="13.0" />
      </font></TextField>
    <TextArea fx:id="contentArea" prefRowCount="5" promptText="Write your note here">
      <font>
         <Font name="Tahoma" size="13.0" />
      </font></TextArea>
    <Button fx:id="addButton" onAction="#handleAdd" text="Add" />
    <Label text="Saved Notes:" />
    <ScrollPane fitToWidth="true" prefHeight="200">
        <content>
            <TextFlow fx:id="notesDisplay" />
        </content>
    </ScrollPane>
</VBox>
